<!doctype html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="shortcut icon" href="https://bit.ly/2wAlL0x" />

  <title>{{ shop.name }} - {{ page_title }}</title>

  <meta name="description" content="{{ shop.description }}">

  {% include 'style-tags', layout: 'theme' %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' | script_tag }}

  {% include 'script-tags', layout: 'theme' %}

  {{ content_for_header }}
</head>

<body>
  {% include 'header' %}
  <div class="site-wrapper {% if settings.display_announcement_banner %}banner-showing{% endif %}">
    <div class="main-height {% if settings.display_announcement_banner %}banner-showing{% endif %}">
      {{ content_for_layout }}
    </div>
    {% include 'footer' %}
  </div>
  {% include 'cart' %}
</body>
</html>
