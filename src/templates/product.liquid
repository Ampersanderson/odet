<div class="js-product-wrapper overflow-hidden main-height relative">
  <div class="left main-height w60p">
    {% for image in product.images limit:2 %}
      <img class="w100p block mb1" src="{{ image | img_url: '1024x' }}" />
    {% endfor %}
  </div>
  <div class="js-product-details product-details">
    <div class="w60p mx-auto">
      <h2 class="h1 text-normal mt0 mb1">{{ product.title }}</h2>
      <p class="mt0 mb2 gray">{{ product.price | money_without_trailing_zeros }}</p>
      <form class="js-cart-form" action="/cart/add" method="post" enctype="multipart/form-data">
        <div class="flex items-center mb1">
          <div class="relative w50p">
            <div class="placeholder p1 border border-smoke flex items-center justify-center bembo">
              <span>Size</span>
              <div class="arrow-down arrow-down-black"></div>
            </div>
            <select name="id" class="absolute t0 l0 w100p h100p o0p pointer">
              <option value="Size" disabled selected>Size</option>
              {% for variant in product.variants %}
                {% if variant.available == true %}
                  <option value="{{ variant.id }}">
                    {{ variant.title }}
                  </option>
                {% else %}
                  <option disabled="disabled">
                    {{ variant.title }} - sold out!
                  </option>
                {% endif %}
              {% endfor %}
            </select>
          </div>
          <span class="pl1"></span>
          <div class="relative w50p">
            <div class="placeholder p1 border border-smoke flex items-center justify-center bembo">
              <span>Qty</span>
              <div class="arrow-down arrow-down-black"></div>
            </div>
            <select name="quantity" class="absolute t0 l0 w100p h100p o0p pointer">
              <option value="Qty" disabled selected>Qty</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
            </select>
          </div>
        </div>
        <input
          type="submit"
          name="add"
          id="add"
          value="Add to Cart"
          class="bg-black white h4 py1 px2 bembo no-underline w100p pointer no-outline"
        />
        <section class="product-tabs mt3">
          <ul class="flex list-reset">
            {% for field in product.metafields.Tabs offset:1 %}
              <li class="product-tab border-bottom bembo pointer mr1" data-tab="{{ field | first }}">
                {{ field | first }}
              </li>
            {% endfor %}
            {% for field in product.metafields.Tabs %}
              {% if forloop.first %}
                <li class="product-tab border-bottom bembo pointer" data-tab="{{ field | first }}">
                  {{ field | first }}
                </li>
              {% endif %}
            {% endfor %}
          </ul>
          {% for field in product.metafields.Tabs %}
            <pre class="bembo-italic hide pre-line" data-tab="{{ field | first }}">
              {{ field | last }}
            </pre>
          {% endfor %}
        </section>
      </form>
    </div>
  </div>
</div>
{% for image in product.images offset:2 limit:1 %}
  <img class="w100p block mb1" src="{{ image | img_url: '2048x' }}" />
{% endfor %}
<div class="grid">
  <div class="main-description mx-auto w100p py10">
    {{ product.description }}
  </div>
</div>
{% for image in product.images offset:3 %}
  <img class="w100p block mb1" src="{{ image | img_url: '2048x' }}" />
{% endfor %}
<div class="grid">
  <div class="main-description mx-auto w100p py10 flex">
    <div class="flex-1 text-right">
      <a class="link-with-underline mx1" href="/collections/the-collection">
        Back to Collection
      </a>
    </div>
    <div class="flex-1">
      <a class="link-with-underline mx1" href="/pages/{{ product.handle }}">
        Read the Essay
      </a>
    </div>
  </div>
</div>
