{% assign collection = collections['all'] %}

<div class="home-hero">
  <div class="w100p h100p bg-cover bg-center bg-no-repeat" style="background-image: url({{ collection.image | img_url: '1440x768' }})"></div>
</div>
<div class="main-height flex flex-column">
  <div class="flex justify-between bembo p2 h2">
    <span>19</span>
    <span>94</span>
  </div>
  <div class="flex-1 flex items-center">
    <div class="main-description mx-auto w100p">
      {{ collection.description }}
      <div class="pt2">
        {% for main in linklists.main-menu.links %}
          {% if forloop.first == true %}
            <a class="link-with-underline bembo" href="{{ main.url }}">
              {{ main.title }}
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="flex justify-between bembo p2 h2">
    <span>20</span>
    <span>18</span>
  </div>
</div>
<div class="grid">
  <div class="index-row overflow-hidden pt6">
    {% for product in collections.all.products %}
      <div class="index-item border-box">
        <a href="{{ product.url }}" class="inline-block no-underline black">
          {% for image in product.images %}
            {% if forloop.first == true %}
              <img class="block" src="{{ image | img_url: '750x' }}" />
            {% endif %}
          {% endfor %}
          <div class="flex justify-between">
            <div>
              <p class="bembo mb0" style="margin-bottom: .25rem;">
                Concept {{ forloop.index }}:
              </p>
              <p class="m0">{{ product.title }}</p>
            </div>
            <p>{{ product.price | money_without_trailing_zeros }}</p>
          </div>
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="text-center">
    <a class="border border-smoke py1 px2 bembo black no-underline" href="">
      View the Full Collection
    </a>
  </div>
</div>
